# Login access control table, scanned for first entry matching user@origin
# format: permission : users/groups : origins
#
- : ALL : tsunami.ocf.berkeley.edu werewolves.ocf.berkeley.edu
- : (sorry) : cron crond
+ : ALL : cron crond
+ : root : ALL
+ : apt-dater : lightning.ocf.berkeley.edu
+ : ocfbackups : hal.ocf.berkeley.edu
+ : ocfdeploy : reaper.ocf.berkeley.edu LOCAL
+ : nessus : .security.berkeley.edu
<% @ulogin.each do |user,from| -%>
<% if not user.nil? and not from.nil? -%>
+ : <%= user %> : <%= from %>
<% end -%>
<% end -%>
+ : (ocfroot) : ALL
+ : (ocfstaff) : ALL
+ : (sys) : ALL
<% @glogin.each do |group,from| -%>
<% if not group.nil? and not from.nil? -%>
+ : (<%= group %>) : <%= from %>
<% end -%>
<% end -%>
- : ALL : ALL
